{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "../../dist/scripts",
        "rootDir": "..",
        "baseUrl": ".",
        "paths": {
            "*": ["../types/*"]
        }
    },
    "include": [
        "./**/*.ts",
        "../server/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
} 